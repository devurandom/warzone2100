#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


# These are used for cross-compiling and for saving the configure script
# from having to guess our platform (since we know it already)
DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)

# This is used to make sure that we only put autoconf in cross-compiling mode
# when the host-type (i.e. the platform on which the resulting binary will
# run), differs from the build-type (i.e. the platform on which the binary will
# be compiled.
ifeq ($(DEB_BUILD_GNU_TYPE), $(DEB_HOST_GNU_TYPE))
  CONFFLAGS += --build=$(DEB_BUILD_GNU_TYPE)
else
  CONFFLAGS += --build=$(DEB_BUILD_GNU_TYPE) --host=$(DEB_HOST_GNU_TYPE)
endif

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

%.xpm: %.png
	pngtopnm -alpha $< | pnmscale -xysize 32 32 > $@.alpha
	pngtopnm $< | pnmscale -xysize 32 32 | ppmtoxpm -alphamask $@.alpha > $@
	$(RM) $@.alpha

configure:
	sh autogen.sh

config.status: configure
	dh_testdir

	CFLAGS="$(CFLAGS)" ./configure $(CONFFLAGS) --prefix=/usr --bindir=\$${prefix}/games --datadir=\$${prefix}/share/games --mandir=\$${prefix}/share/man --enable-data --disable-quesoglc


build: build-stamp

build-stamp:  config.status icons/warzone2100.xpm
	dh_testdir

	$(MAKE)

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	$(RM) build-stamp 

	-$(MAKE) distclean

	$(RM) icons/warzone2100.xpm

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	$(MAKE) install-exec DESTDIR=$(CURDIR)/debian/warzone2100
	$(MAKE) install-data DESTDIR=$(CURDIR)/debian/warzone2100-data


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs ChangeLog
#	dh_installdocs
	dh_installexamples
	dh_install
	dh_installmenu
	dh_desktop
#	dh_installdebconf
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
#	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_python
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install 
